<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    <TextView
            android:id="@+id/full_time_text_view"
            android:layout_marginEnd="@dimen/text_small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"/>
    <TextView
            android:id="@+id/full_activity_text_view"
            android:layout_toEndOf="@id/full_time_text_view"
            android:layout_alignBaseline="@id/full_time_text_view"
            android:layout_marginLeft="@dimen/text_adapter_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"/>
    <TextView
            android:id="@+id/address_item_view"
            android:layout_below="@id/full_activity_text_view"
            android:layout_alignStart="@id/full_activity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_item"/>
    <TextView
            android:id="@+id/full_address_text_view"
            android:layout_below="@id/full_activity_text_view"
            android:layout_toRightOf="@id/address_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_small_margin"
            android:text="Kopeysk, Pionerskaya St., 17"/>
    <TextView
            android:id="@+id/full_notes_text_view"
            android:layout_below="@id/full_address_text_view"
            android:layout_alignStart="@id/full_activity_text_view"
            android:layout_marginTop="@dimen/text_small_margin"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity notes"/>
    <ImageView
            android:id="@+id/full_image_view"
            android:layout_below="@id/full_notes_text_view"
            android:layout_alignStart="@id/full_activity_text_view"
            android:layout_marginTop="@dimen/text_small_margin"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    <View
            android:id="@+id/delimeter_view"
            android:layout_below="@id/full_image_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/text_small_margin"
            android:background="@color/gray_mercury"/>
</RelativeLayout>