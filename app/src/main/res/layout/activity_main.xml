                android:layout_margin="@dimen/text_small_margin"
                android:text="27"/>
        <TextView
                android:layout_margin="@dimen/text_small_margin"
                android:text="28"/>

        <TextView
                android:layout_margin="@dimen/text_small_margin"
                android:text="29"/>
        <TextView
                android:layout_margin="@dimen/text_small_margin"
                android:text="30"/>

    </GridLayout>
    <View
            android:id="@+id/delimeter_view"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="@dimen/text_small_margin"
            android:background="@color/gray_mercury"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_small_margin">
        <TextView
                android:text="Today's TO-DO list"
                android:layout_marginTop="@dimen/text_small_margin"
                style="@style/TextToDoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="10:00     Встреча с Алисой"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="15:30     Добить текущие задачи по приложению"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="20:34     Вечерний кофе и книги"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>