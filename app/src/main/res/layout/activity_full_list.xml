<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/full_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="52sp"
            android:padding="@dimen/text_small_margin"
    android:elevation="5dp"
    android:outlineAmbientShadowColor="@color/gray_mercury">

        <LinearLayout
                android:id="@+id/full_list_profile_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/full_list_profile_image_view"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginRight="@dimen/text_small_margin"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:id="@+id/full_list_profile_name_text_view"
                    android:layout_toEndOf="@+id/full_list_profile_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dokutaa"
                    android:layout_gravity="center_vertical"/>
            <ImageView
                    android:id="@+id/full_list_profile_arrow"
                    android:layout_toEndOf="@id/full_list_profile_name_text_view"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/dropdown_arrow"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
            android:id="@+id/full_list_menu"
            android:layout_width="match_parent"
            android:layout_height="42sp"
    android:layout_below="@id/full_list_toolbar">
        <TextView
                android:id="@+id/full_list_date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_list_date_item"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_medium_margin"
                android:layout_marginRight="@dimen/text_small_margin"/>
        <TextView
                android:id="@+id/full_list_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
        android:layout_toRightOf="@id/full_list_date_item"/>
        <Button
                android:id="@+id/full_list_add_activity_button"
                android:layout_toLeftOf="@id/full_list_delete_activity_button"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_centerVertical="true"
                style="@style/CustomButtonStyle"
                android:text="+"
                android:layout_marginLeft="@dimen/text_small_margin"
                android:layout_marginRight="@dimen/text_small_margin"/>
        <Button
                android:id="@+id/full_list_delete_activity_button"
                android:layout_alignParentRight="true"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_centerVertical="true"
                style="@style/CustomButtonStyle"
                android:text="D"
                android:layout_marginLeft="@dimen/text_small_margin"
                android:layout_marginRight="@dimen/text_small_margin"/>
    </RelativeLayout>
    <View
            android:id="@+id/full_list_delimeter_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/text_small_margin"
            android:layout_below="@id/full_list_menu"
            android:background="@color/gray_mercury"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/full_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_list_delimeter_view"/>

</RelativeLayout>